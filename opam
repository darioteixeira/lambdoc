available: [ocaml-version >= "4.02.0"]
build: [
  ["./configure" "--prefix" prefix
                 "--docdir" "%{doc}%/lambdoc"
                 "--%{alcotest:enable}%-tests"]
  [make]
  [make "doc"]
]
build-test: [make "test"]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "lambdoc"]]
depends: [
  "alcotest" {test}
  "blahcaml"
  "camlhighlight" {>= "5"}
  "menhir"
  "ocamlbuild" {build}
  "ocamlfind"
  "ppx_blob"
  "ppx_deriving"
  "ppx_sexp_conv"
  "re"
  "sedlex"
  "sexplib"
  "tyxml" {>= "4"}
