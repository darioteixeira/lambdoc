  ["./configure" "--prefix" prefix
                 "--docdir" "%{doc}%/lambdoc"
                 "--%{alcotest:enable}%-tests"]
  [make]
  [make "doc"]
]
build-test: [make "test"]
install: [[make "install"]]
remove: [["ocamlfind" "remove" "lambdoc"]]
